---
import { Image } from "astro:assets";

import MockupLogin from "@/assets/images/MockupLogin.png";
import MockupStore from "@/assets/images/MockupStore.png";
import MockupDashboard from "@/assets/images/MockupDashboard.png";
---

<section class="grid place-content-center">
  <div>
    <h2 class="text-center text-4xl font-bold text-white mb-2">
      Mockups del proyecto
    </h2>
    <p class="text-zinc-300 text-center">Explore nuestros dise√±os modernos.</p>
  </div>
  <div class="grid grid-cols-2 gap-4 p-14 max-w-5xl">
    <picture class="overflow-hidden rounded-md">
      <Image
        src={MockupDashboard}
        alt={"MockupDashboard"}
        class="rounded-md hover:scale-110 transition-transform duration-500"
      />
    </picture>
    <picture class="overflow-hidden rounded-md row-span-2">
      <Image
        src={MockupLogin}
        alt={"MockupDashboard"}
        class="h-full object-cover rounded-md hover:scale-105 transition-transform duration-500"
      />
    </picture>
    <picture class="overflow-hidden rounded-md">
      <Image
        class="rounded-md hover:scale-110 transition-transform duration-500"
        src={MockupStore}
        alt={"MockupDashboard"}
      />
    </picture>
  </div>
</section>

<style>
  img:nth-child(1) {
    object-position: 93%;
  }
</style>
